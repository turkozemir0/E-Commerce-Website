
@{
    ViewBag.Title = "markakaydet";
    Layout = "~/Views/Shared/admin_layout.cshtml";
}


<br />
<br />
<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="portlet box purple">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i> KATEGORİ GİRİŞ FORMU
        </div>
        <div class="tools">
            <a href="" class="collapse">
            </a>
            <a href="#portlet-config" data-toggle="modal" class="config">
            </a>
            <a href="" class="reload">
            </a>
            <a href="" class="remove">
            </a>
        </div>
    </div>
    <div class="portlet-body form">
        @*<form class="form-horizontal" role="form" action="/Admin/KategoriKaydet" method="post">*@

        @using (Html.BeginForm("MarkaKaydet", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
        {
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">MARKA ADI</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control input-lg" name="BrandName" maxlength="50" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">RESİM SEÇİNİZ</label>
                    <div class="col-md-9">
                        <input type="file" class="form-control input-lg" name="fileuploader" required>
                    </div>
                </div>
                <div class="form-actions right1">
                    <button type="submit" class="btn green">KAYDET</button>
                </div>
            </div>
        }

    </div>
</div>
<!-- END SAMPLE FORM PORTLET-->
