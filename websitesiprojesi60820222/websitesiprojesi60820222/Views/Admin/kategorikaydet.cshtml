
@{
    ViewBag.Title = "kategorikaydet";
    Layout = "~/Views/Shared/admin_layout.cshtml";

    IEnumerable<SelectListItem> cl = ViewData["catlist"] as IEnumerable<SelectListItem>;
}

<br />
<br />
<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="portlet box purple">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i> KATEGORİ GİRİŞ FORMU
        </div>
        <div class="tools">
            <a href="" class="collapse">
            </a>
            <a href="#portlet-config" data-toggle="modal" class="config">
            </a>
            <a href="" class="reload">
            </a>
            <a href="" class="remove">
            </a>
        </div>
    </div>
    <div class="portlet-body form">
        <form class="form-horizontal" role="form" action="/Admin/KategoriKaydet" method="post">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">ANA KATEGORİ SEÇİNİZ</label>
                    <div class="col-md-9">
                        @Html.DropDownList("CategoryID", cl, "Seçiniz", new { @class = "form-control input-lg" });
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">KATEGORİ ADI</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control input-lg" name="CategoryName" maxlength="50">
                    </div>
                </div>
                <div class="form-actions right1">
                    <button type="submit" class="btn green">KAYDET</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- END SAMPLE FORM PORTLET-->
